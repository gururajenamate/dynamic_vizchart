<mvc:View controllerName="dynamicvizchart.controller.Chart"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls" xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:core="sap.ui.core" xmlns:viz.data="sap.viz.ui5.data" height="100%">
     <Page title="Dynamic Area Chart">
        <content>

            <!-- VizFrame Chart -->
            <viz:VizFrame vizProperties="{
                    title: {
                        text: ''
                    }
                }" id="idVizFrame" width="100%" height="90%" uiConfig="{applicationSet:'fiori'}" vizType="area">
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/filteredData}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Time" value="{time}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Value" value="{value}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>
                <viz:feeds>
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="Time" />
                    <viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Value" />
                </viz:feeds>
            </viz:VizFrame>
            <HBox justifyContent="SpaceAround">
            <SegmentedButton selectionChange="onFilterData" selectedKey="day" class="sapUiSmallMargin">
				<items>
					<SegmentedButtonItem text="Day" key="day" />
					<SegmentedButtonItem text="Week" key="week" />
					<SegmentedButtonItem text="Month" key="month" />
				</items>
			</SegmentedButton>
            </HBox>
        </content>
    </Page>
</mvc:View>